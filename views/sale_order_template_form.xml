<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_template_form_inherit_sections" model="ir.ui.view">
        <field name="name">sale.order.template.form.inherit.sections</field>
        <field name="model">sale.order.template</field>
        <field name="inherit_id" ref="sale_management.sale_order_template_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook[@name='main_book']" position="inside">
                <page string="Secciones Arca" name="quotation_sections">
                    <group name="quotation_group">
                        <field name="arca_introduccion"/>
                        <field name="arca_alcance_del_proyecto"/>
                        <field name="arca_alcance_organizacional"/>
                        <field name="arca_metodologia"/>
                        <field name="arca_alcance_tecnico_y_fases"/>
                        <field name="arca_condiciones_generales_y_terminos"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
